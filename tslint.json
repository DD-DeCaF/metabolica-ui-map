{
  "extends": "./eslint.json",
  "rules": {
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "no-unused-variable": [
      true
    ],
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-internal-module": true,
    "no-var-keyword": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      false,
      "double"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ],
    "jsdoc-format": true,
    "eofline": true,
    "no-shadowed-variable": true,
    "no-trailing-whitespace": true,
    "max-line-length": [
      true,
      140
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "member-access": [
      true,
      "check-accessor"
    ],
    "no-conditional-assignment": true,
    "no-empty": true,
    "use-isnan": true,
    "forin": true,
    "no-arg": true,
    "switch-default": true,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "no-debugger": true,
    "no-unsafe-finally": true,
    "cyclomatic-complexity": [
      true,
      20
    ],
    "curly": [
      true,
      "ignore-same-line"
    ],
    "no-invalid-this": true,
    "label-position": true,
    "only-arrow-functions": [
      true,
      "allow-declarations"
    ],
    "no-sparse-arrays": true,
    "no-construct": true,
    "no-string-throw": true,
    "no-unused-expression": true,
    "no-bitwise": true,
    "new-parens": true,
    "no-consecutive-blank-lines": [
      true,
      2
    ]
  }
}