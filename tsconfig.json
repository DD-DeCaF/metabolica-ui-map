{
	"compilerOptions": {
		"module": "es6",
		"target": "es5",
		"moduleResolution": "node",
		"lib": ["es2017.object", "dom", "es2015", "es2016"],
		"experimentalDecorators": true,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"outDir": "dist",
		"rootDir": ".",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"exclude": [
		"node_modules"
	],
	"angularCompilerOptions": {
		"debug": false
	},
	"experimentalDecorators": true,
	"compileOnSave": false,
	"buildOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}
